<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listagem_alunos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifes.controleacademico.ListagemAlunosActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Inserir aluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInserirAluno" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewAlunos"
            android:visibility="visible" />

        <TextView
            android:text="Nao ha aluno cadastrado."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVazio"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
